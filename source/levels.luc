  .clk(clk){
    //    edge_detector edge_detector(#RISE(1), #FALL(0)); // detect rising edges
    //    button_conditioner button_cond;     // button input conditioner
    .rst(rst){
      dff counter[30](.clk(clk));  // CLOCK
      dff lives[9](.clk(clk));  // MOVES LEFT
      fsm state = {IDLE, ONE, IDLE2, TWO, IDLE3, THREE, IDLE4, FOUR, IDLE5,
        FIVE, IDLE6, SIX, IDLE7, SEVEN, IDLE8, EIGHT, IDLE9, NINE, IDLE10,
        TEN, LOSE, WIN};  // EACH LEVEL
      dff pass_signal;
      dff targetresult[8];
    }
  }
  
  always {
    counter.d = counter.q + 1;
    
    lives.d = lives.q;
    life = lives.q; //number of moves left
    
    pass = pass_signal.q; //reset alu
    pass_signal.d = pass_signal.q;
    
    targetresult.d = targetresult.q;
    targetresultdisplay = targetresult.q;
    
    case(state.q){
      // State to choose starting number
      state.IDLE:
        lives.d = 9b111111111;
        pass_signal.d = 0;
        if (getresultbutton == 1) {
          state.d = state.ONE;
          counter.d = 0;
        }
      
      state.ONE:
        // LEVEL ONE
        targetresult.d = 50;
        
        if (tempresult >= 2000) {
          state.d = state.LOSE;
        }
        
        // time to make a move
        if (counter.q[29] == 1) {
          if (lives.q > 0) {
            lives.d = lives.q >> 1;
            state.d = state.ONE;
            counter.d = 0;
            pass_signal.d = 0;
          }
          else {
            state.d = state.LOSE;
          }
        }
        // choosing a number
        if (getnumberbutton == 1) {
          if (tempresult == 50) { //446
            lives.d = 9b111111111;
            state.d = state.IDLE2;
            counter.d = 0;
            pass_signal.d = 1;
            targetresult.d = 0;
          }
          else if (tempresult != 8) {
            if (lives.q > 0) {
              lives.d = lives.q >> 1;
              state.d = state.ONE;
              counter.d = 0;
              pass_signal.d = 0;
            }
            else {
              state.d = state.LOSE;
              
            }
          }
        }
      
      state.IDLE2:
        lives.d = 9b111111111;
        pass_signal.d = 0;
        if (getresultbutton == 1) {
          state.d = state.TWO;
          counter.d = 0;
                      targetresult.d = 0;
        }
      
      state.TWO:
        // LEVEL TWO
        targetresult.d = 200;
        
        if (tempresult >= 2000) {
          state.d = state.LOSE;
        }
        
        if (counter.q[29] == 1) {
          if (lives.q > 0) {
            lives.d = lives.q >> 1;
            state.d = state.TWO;
            counter.d = 0;
            pass_signal.d = 0;
          }
          else {
            state.d = state.LOSE;
          }
        }
        //choosing a number
        if (getnumberbutton == 1) {
          if (tempresult == 200) {
            lives.d = 9b111111111;
            state.d = state.IDLE3;
            counter.d = 0;
            pass_signal.d = 1;
                        targetresult.d = 0;
          }
