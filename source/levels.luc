          if (lives.q > 0) {
            lives.d = lives.q >> 1;
            state.d = state.TEN;
            counter.d = 0;
            pass_signal.d = 0;
          }
          else {
            state.d = state.LOSE;
          }
        }
        if (getnumberbutton == 1) {
          if (tempresult == 975) {
            state.d = state.WIN;
          }
          else if (tempresult != 975) {
            if (lives.q > 0) {
              lives.d = lives.q >> 1;
              state.d = state.TEN;
              counter.d = 0;
              pass_signal.d = 0;
            }
            else {
              state.d = state.LOSE;
            }
          }
        }
      
      state.LOSE:
        state.d = state.LOSE;
        lives.d = 0;
      
      state.WIN:
        state.d = state.WIN;
    }
  }
}